<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_riskarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    android:padding="25dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/layoutcLuster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_border"
        android:gravity="center_horizontal"
        android:onClick="ClickToEditCluster"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutdetailcluster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="ClickToEditCluster"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cluster_clicktoedit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:background="#00FFFFFF"
                android:onClick="ClickToEditCluster"
                app:srcCompat="@drawable/co_location" />

            <TextView
                android:id="@+id/txtedit_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtsubdistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:text="ต."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtedit_subdistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="subdistrict"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtsubdistrict4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:text="อ."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtedit_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="district"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dateinfect_start"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:background="@color/white"
                app:srcCompat="@drawable/calendar_dateinfect" />

            <TextView
                android:id="@+id/txtedit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="Date"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/virus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                app:srcCompat="@drawable/virus" />


            <TextView
                android:id="@+id/txtedit_newpatient"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="newpatient"
                android:textColor="#F44336"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/txtdelete"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="#00FFFFFF"
            android:radius="100dp"
            app:srcCompat="@drawable/co_bin" />

    </LinearLayout>


</androidx.cardview.widget.CardView>