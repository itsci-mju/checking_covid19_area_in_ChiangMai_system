<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_mohpromt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:padding="25dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:id="@+id/layoutmohpromt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_border"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutdetailcluster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mohprom_clicktoedit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/white"
                app:srcCompat="@drawable/co_hospital" />

            <TextView
                android:id="@+id/txt_mohpromtplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt_medium"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_mohpromttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt_medium"
                android:text="ประเภท"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/calendar_dateinfect" />

            <TextView
                android:id="@+id/txt_mohpromt_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:fontFamily="@font/prompt_medium"
                android:text="จ,อ,พ,ส,อา" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/prompt_medium"
                android:text="วันหยุด" />

            <TextView
                android:id="@+id/txt_mohpromt_enddate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/prompt_medium"
                android:text="พฤ,ศ"
                android:textColor="#F44336" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/txt_mohpromt_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt_medium"
                android:text="เวลาเปิด" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/prompt_medium"
                android:text="-" />

            <TextView
                android:id="@+id/txt_mohpromtendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_medium"
                android:text="เวลาปิด" />
        </LinearLayout>

        <ImageView
            android:id="@+id/txtMdelete"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="#00FFFFFF"
            android:radius="100dp"
            app:srcCompat="@drawable/co_bin" />

    </LinearLayout>


</androidx.cardview.widget.CardView>